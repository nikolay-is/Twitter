<h2>Add admin</h2>

<form class="form center-form" method="post">
  <div class="form-group">
    <label for="user">Username</label>
    <select class="select" name="user">
      {{#each users}}
        <option value="{{this._id}}">{{this.username}}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <input class="form-btn btn btn-success" type="submit" value="Make Admin" />
  </div>
</form>
